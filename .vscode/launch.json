{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildWeb",
            "program": "${workspaceFolder}/src/BattleCottage.Web/bin/Debug/net7.0/BattleCottage.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/BattleCottage.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "launchSettingsFilePath": "${workspaceFolder}/src/BattleCottage.Web/Properties/launchSettings.json",
            "launchSettingsProfile": "http",
        }
    ]
}